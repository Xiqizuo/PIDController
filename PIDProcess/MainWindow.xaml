<Window x:Class="PIDProcess.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PIDProcess"
        xmlns:viewModels="clr-namespace:PIDProcess.ViewModels"
        xmlns:oxy="clr-namespace:OxyPlot.Wpf;assembly=OxyPlot.Wpf"
        mc:Ignorable="d"
        Title="PID Process Controller" Height="600" Width="1000">
    <Window.DataContext>
        <viewModels:MainViewModel />
    </Window.DataContext>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Excel 文件路径输入 -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <Label Content="Excel 文件路径: " VerticalAlignment="Center"/>
            <TextBox Text="{Binding ExcelFilePath, UpdateSourceTrigger=PropertyChanged}" Width="400" Margin="5,0"/>
            <Button Content="浏览..." Command="{Binding BrowseFileCommand}" Margin="5,0"/>
            <Button Content="开始监控" Command="{Binding StartMonitoringCommand}" Margin="5,0"
                    IsEnabled="{Binding IsMonitoring, Converter={StaticResource BooleanToOppositeConverter}}"/>
            <Button Content="停止监控" Command="{Binding StopMonitoringCommand}" Margin="5,0"
                    IsEnabled="{Binding IsMonitoring}"/>
        </StackPanel>

        <!-- 数据显示选项卡 -->
        <TabControl Grid.Row="1" Margin="0,10">
            <TabItem Header="数据表格">
                <DataGrid ItemsSource="{Binding DataModels}" AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="时间戳" Binding="{Binding TimeStamp}"/>
                        <DataGridTextColumn Header="输入值" Binding="{Binding InputValue}"/>
                        <DataGridTextColumn Header="设定值" Binding="{Binding SetPoint}"/>
                        <DataGridTextColumn Header="输出值" Binding="{Binding OutputValue}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
            <TabItem Header="趋势图表">
                <oxy:PlotView Model="{Binding PlotModel}" Margin="5"/>
                        <!-- 图表的配置现在在ViewModel中完成 -->
            </TabItem>
        </TabControl>

        <!-- PID 参数设置 -->
        <Grid Grid.Row="2" Margin="0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <Label Content="Kp: " VerticalAlignment="Center"/>
                <TextBox Text="{Binding Kp, UpdateSourceTrigger=PropertyChanged, StringFormat=F2}" Width="80" Margin="5,0"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="10,0">
                <Label Content="Ki: " VerticalAlignment="Center"/>
                <TextBox Text="{Binding Ki, UpdateSourceTrigger=PropertyChanged, StringFormat=F2}" Width="80" Margin="5,0"/>
            </StackPanel>

            <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="10,0">
                <Label Content="Kd: " VerticalAlignment="Center"/>
                <TextBox Text="{Binding Kd, UpdateSourceTrigger=PropertyChanged, StringFormat=F2}" Width="80" Margin="5,0"/>
            </StackPanel>

            <StackPanel Grid.Column="3" Orientation="Horizontal" Margin="10,0">
                <Label Content="最小输出: " VerticalAlignment="Center"/>
                <TextBox Text="{Binding MinOutput, UpdateSourceTrigger=PropertyChanged, StringFormat=F2}" Width="80" Margin="5,0"/>
            </StackPanel>

            <StackPanel Grid.Column="4" Orientation="Horizontal" Margin="10,0">
                <Label Content="最大输出: " VerticalAlignment="Center"/>
                <TextBox Text="{Binding MaxOutput, UpdateSourceTrigger=PropertyChanged, StringFormat=F2}" Width="80" Margin="5,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
